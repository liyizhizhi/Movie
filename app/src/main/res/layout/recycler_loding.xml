<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="350dp">

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:background="#1c2243"
        android:gravity="center">

        <TextView
            android:id="@+id/recy2_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:text="555"
            android:textColor="#ddd" />

        <TextView
            android:id="@+id/recy2_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:text="555"
            android:textColor="#ddd" />

        <TextView
            android:id="@+id/recy2_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text="555"
            android:textColor="#ddd" />

        <Button
            android:id="@+id/recy2_but"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/recy2_text3"
            android:background="@drawable/beis"
            android:text="预约"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        fresco:roundedCornerRadius="10dp"
        android:layout_width="108dp"
        android:id="@+id/recy2_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_height="138dp">
    </com.facebook.drawee.view.SimpleDraweeView>
</FrameLayout>
