<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:id="@+id/recy3_image2"
            fresco:roundedCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="130dp">
        </com.facebook.drawee.view.SimpleDraweeView>
        <TextView
            android:id="@+id/recy3_text1"
            android:layout_width="100dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:layout_below="@id/recy3_image2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-21dp"
            android:text="9.4"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/recy3_text2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_below="@id/recy3_text1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="悲伤牛流程和"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/recy3_but"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@id/recy3_text2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:textSize="12dp"
            android:background="@drawable/beis"
            android:text="购票"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>
